---
import Button from "../components/Button.svelte";
import Canvas from "../components/Canvas.svelte";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Letsmoe">
	<Canvas client:load />
	<main>
		<div class="absolute left-[50%] top-[80px] translate-x-[-50%] flex flex-col items-center justify-center w-full h-[calc(100%-80px)] backdrop-blur-sm">
			<img src="/images/letsmoe.jpeg" alt="Me" class="border-8 w-[250px] h-[250px] rounded-full object-cover" />
			<h1>Moritz Utcke</h1>
			<p class="text-center text-xl">"Throw your bag over the fence. Then you have to go and get it."</p>
			<div class="flex gap-4">
				<Button content="Projects" icon="terminal" target="/projects" />
				<Button
					type="github"
					content="Code"
					target="https://github.com/Letsmoe"
				/>
			</div>
		</div>
	</main>
</Layout>
