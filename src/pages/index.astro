---
import Button from "../components/Button.svelte";
import Canvas from "../components/Canvas.svelte";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Letsmoe">
	<Canvas client:load />
	<main>
		<div class="absolute-mid">
			<img src="/images/letsmoe.jpeg" alt="Me" class="border-8" />
			<h1>Moritz Utcke</h1>
			<p class="text-center">Full-time adventurer and RGB-lover</p>
			<div class="flex gap-4">
				<Button content="Projects" icon="terminal" target="/projects" />
				<Button
					type="github"
					content="Code"
					target="https://github.com/Letsmoe"
				/>
			</div>
		</div>
	</main>
</Layout>

<style>
	.absolute-mid {
		position: absolute;
		left: 50%;
		top: 50%;
		transform: translate(-50%, -50%);
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
	}

	p {
		font-size: 24px;
	}

	img {
		width: 250px;
		height: 250px;
		object-fit: cover;
		border-radius: 50%;
	}

	main {
		width: 0;
		height: 0;
		padding: 0;
	}

	@media (min-width: 640px) {
		main {
			max-width: none;
		}
	}
</style>
