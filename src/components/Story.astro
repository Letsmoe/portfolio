---
import {Image} from "@astrojs/image/components";

const { data } = Astro.props;
---

<a
	class="group rounded-lg story shadow-sm hover:shadow-md transition-shadow cursor-pointer bg-base-200 before:hidden overflow-hidden max-w-[600px] no-underline"
	data-category={data.frontmatter.category}
	data-slug={data.frontmatter.slug}
	href={"/blog/" + data.frontmatter.slug}
>
	<div class="group-hover:scale-105 transition-transform w-full h-auto max-h-[350px] object-cover rounded-tl-lg rounded-tr-lg">
		<Image
			alt=""
			width={600}
			height={350}
			fit="cover"
			class="my-0"
			src={data.frontmatter.image}
		/>
	</div>
	<div class="p-4">
		<span
			class="rounded-lg bg-base-200 text-base-content font-medium px-2 py-1 mb-4 block w-min text-xs"
			>{data.frontmatter.category}</span
		>
		<h2 class="text-2xl font-medium text-base-content">
			{data.frontmatter.title}
		</h2>
		<p class="text-lg text-base-content">{data.frontmatter.description}</p>
	</div>
</a>
