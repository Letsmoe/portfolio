---
const { data } = Astro.props;
---

<a
	class="group rounded-lg story shadow-sm hover:shadow-md transition-shadow cursor-pointer border-2 before:hidden overflow-hidden"
	data-category={data.frontmatter.category}
	data-slug={data.frontmatter.slug}
	href={"/blog/" + data.frontmatter.slug}
>
	<img
		class="group-hover:scale-105 transition-transform w-full h-auto max-h-[350px] object-cover rounded-tl-lg rounded-tr-lg"
		src={data.frontmatter.image}
	/>
	<div class="p-4">
		<span
			class="rounded-lg bg-slate-700 text-slate-100 font-medium px-2 py-1 mb-4 block w-min text-xs"
			>{data.frontmatter.category}</span
		>
		<h2 class="text-2xl font-medium text-slate-900">
			{data.frontmatter.title}
		</h2>
		<p class="text-lg text-slate-600">{data.frontmatter.description}</p>
	</div>
</a>
