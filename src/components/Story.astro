---
const { data } = Astro.props;
---

<a
	class="group rounded-lg story shadow-sm hover:shadow-md transition-shadow cursor-pointer bg-base-200 before:hidden overflow-hidden max-w-[600px] no-underline w-full"
	data-tags={data.frontmatter.tags[0]}
	data-slug={data.frontmatter.slug}
	href={"/blog/" + data.frontmatter.slug}
>
	<img src={data.frontmatter.image} alt={data.frontmatter.title} class="group-hover:scale-105 transition-transform w-full h-auto max-h-[350px] object-cover rounded-tl-lg rounded-tr-lg m-0">
	<div class="p-4">
		<div class="flex flex-row gap-2 flex-wrap">
			{data.frontmatter.tags.map((tag: string) => (
				<span
					class="rounded-lg bg-accent text-accent-content font-medium px-2 py-1 mb-4 block w-min text-xs"
					>{tag}</span>
			))}
		</div>
		<h2 class="text-2xl font-medium text-base-content">
			{data.frontmatter.title}
		</h2>
		<p class="text-lg text-base-content">{data.frontmatter.description}</p>
	</div>
</a>
