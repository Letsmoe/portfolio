---
import "../style/docs.scss";
import Header from "../components/Header.astro";
import Navigation from "../components/Navigation.astro";
import ContentNavigation from "../components/ContentNavigation.astro";
import ContentFooter from "../components/ContentFooter.astro";
import QuickLinks from "../components/QuickLinks.astro";

export interface Props {
	title: string;
}

const { content = {} } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link
			rel="icon"
			href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>ðŸŒˆ</text></svg>"
		/>
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>{content.title}</title>
	</head>
	<body>
		<Header />

		<main
			class="relative flex justify-center mx-auto max-w-8xl sm:px-2 lg:px-8 xl:px-12"
		>
			<Navigation />

			<div
				class="flex-auto max-w-2xl min-w-0 px-4 py-10 lg:max-w-none lg:pr-0 lg:pl-8 xl:px-16"
			>
				<article class="">
					<header class="">
						<p class="text-base font-medium text-slate-500">
							{content.section}
						</p>

						<h1
							class="text-3xl font-bold tracking-tight text-slate-900"
						>
							{content.title}
						</h1>
					</header>

					<p class="mt-2 text-xl text-slate-600">
						{content.description}
					</p>

					<div
						class="mt-8 prose prose-slate max-w-none prose-headings:font-semibold prose-headings:tracking-tight prose-lead:text-slate-500 prose-a:font-semibold prose-a:underline prose-pre:bg-slate-900"
					>
						<slot />
					</div>

					<QuickLinks showQuicklinks={content.showQuicklinks} />

					<ContentFooter />
				</article>

				<ContentNavigation />
			</div>
		</main>
	</body>
</html>
